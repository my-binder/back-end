{
  "name": "mybinder-back-end",
  "version": "1.0.0",
  "description": "",
  "main": "src/server.ts",
  "scripts": {
    "dev": "NODE_ENV=development ts-node-dev -r dotenv/config -r tsconfig-paths/register src/server.ts dotenv_config_path=./.env.development",
    "build": "tsc",
    "start": "node -r dotenv/config dist/src/server.js",
    "integration-tests": "npx dotenv-cli -e .env.test jest -- --no-cache -i --testPathPattern=tests/integration",
    "unit-tests": "npx dotenv-cli -e .env.test jest -- --no-cache -i --coverage --testPathPattern=tests/unit",
    "e2e-server": "NODE_ENV=test ts-node-dev -r dotenv/config -r tsconfig-paths/register src/server.ts dotenv_config_path=./.env.test",
    "dev:db:migrate": "npx prisma migrate dev",
    "test:db:migrate": "npx dotenv-cli -e .env.test prisma migrate dev"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@faker-js/faker": "^7.5.0",
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.14",
    "@types/jest": "^29.0.3",
    "@types/joi": "^17.2.3",
    "@types/jsonwebtoken": "^8.5.9",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "^8.3.4",
    "dotenv-cli": "^6.0.0",
    "jest": "^29.0.3",
    "prisma": "^4.6.1",
    "supertest": "^6.2.4",
    "ts-jest": "^29.0.3",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.1.0",
    "typescript": "^4.8.4"
  },
  "dependencies": {
    "@prisma/client": "^4.6.1",
    "bcrypt": "^5.0.1",
    "cors": "^2.8.5",
    "dotenv": "^16.0.2",
    "express": "^4.18.1",
    "express-async-errors": "^3.1.1",
    "joi": "^17.6.1",
    "jsonwebtoken": "^8.5.1",
    "uuid": "^9.0.0"
  }
}
